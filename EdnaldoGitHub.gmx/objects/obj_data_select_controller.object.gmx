for (i = 0; i &lt; 5; i += 1)
{
    if !file_exists("save0" + string(i) + ".ini")
    {
        data_text[i] = text("File 0" + string(i) + " is empty.", "Arquivo 0" + string(i) + " está vazio.")
    }
    else
    {
        ini_open("save0" + string(i) + ".ini")
        var createdate;  
        createdate = ini_read_string("Misc","createdate","----");
        
        var stages;  
        stages = ini_read_real("Values","stages_unlocked",global.stages_unlocked);
        ini_close();
    
        data_text[i] = text(
        "File 0" + string(i) + " - " + string(stages) + " stages unlocked.#Created In: " + string(createdate),
        "Arquivo 0" + string(i) + " - " + string(stages) + " fases desbloqueadas.#Criado em: " + string(createdate));
    }
}
