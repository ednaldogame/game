{
    if keyboard_check_pressed(global.key_down) &amp;&amp; current_option &lt; option_max
    {
    update_option(current_option + 1)
    aud_play_simple(snd_menu_bleep);
    }
    
    if keyboard_check_pressed(global.key_up) &amp;&amp; current_option &gt; option_min
    {
    update_option(current_option - 1)
    aud_play_simple(snd_menu_bleep);
    }
    
    // Select
    if keyboard_check_pressed(global.key_enter)
    {
        global.current_save = current_option;
        
        // Write Date.
        if !file_exists("save0" + string(global.current_save) + ".ini")
        {
            ini_open("save0" + string(global.current_save) + ".ini");
            ini_write_string("Misc","createdate",string(string(current_day) + "/" + string (current_month) + "/" + string(current_year) + " - "  + string(current_hour) + ":" + string(current_minute) + "." + string(current_second))); 
            ini_close(); 
            scr_save_game()
            aud_play_simple(snd_menu_accept);
            
            with instance_create(256,144,obj_fade_to_white)
            {
                value = rm_intro_ingame;
            }
            
            audio_sound_gain(global.bgm, 0, 2550);
            TweenFireTo(id, EaseInOutQuad, 0, false, 0, 15, "save_alpha", 0);
            TweenFireTo(id, EaseInOutQuad, 0, false, 0, 30, "bar_alpha", 0);

        }
        else
        {
            // Load
            aud_play_simple(snd_menu_accept);
            scr_load_game()
            
            with instance_create(0,0,objFadeToValue)
            {
                value = rm_map;
            }
        }
    }
    
    // Delete
    if keyboard_check_released(vk_delete)
    {
        if file_exists("save0" + string(current_option) + ".ini")
        {
            file_delete("save0" + string(current_option) + ".ini")
            aud_play_simple(snd_swap);
        }
        else
        {
            aud_play_simple(snd_swap_fail);
        }
    }
}

/// Handle File Names.
